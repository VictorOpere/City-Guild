<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.AllCategories"
    android:background="@color/home_background">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/myotherarrow"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/back_pressed"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mysearch"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textSize="36sp"
            android:fontFamily="@font/julee"
            android:padding="10dp"
            android:textAllCaps="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/card_2">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/car_rent"
                android:textSize="30sp"
                android:fontFamily="@font/julee"
                android:padding="30dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expand_all"
                android:background="#00000000"
                android:layout_alignParentBottom="true"
                android:padding="20dp"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/bigfoot"
                android:layout_alignParentRight="true"
                android:padding="20dp"
                android:layout_marginTop="-20dp"/>

            
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_margin="20dp"
            android:background="@drawable/card_1"
            android:elevation="5dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/restaurant"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eatery"
                android:textSize="30sp"
                android:fontFamily="@font/julee"
                android:padding="30dp"
                android:layout_alignParentRight="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expand_all"
                android:background="#00000000"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:layout_alignParentRight="true"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_margin="20dp"
            android:background="@drawable/card_1"
            android:elevation="5dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/bank"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/banking"
                android:textSize="30sp"
                android:fontFamily="@font/julee"
                android:padding="30dp"
                android:layout_alignParentRight="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expand_all"
                android:background="#00000000"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:layout_alignParentRight="true"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/card_1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shopping"
                android:textSize="30sp"
                android:fontFamily="@font/julee"
                android:padding="30dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expand_all"
                android:background="#00000000"
                android:layout_alignParentBottom="true"
                android:padding="20dp"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/shop"
                android:layout_alignParentRight="true"
                android:padding="20dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_margin="20dp"
            android:background="@drawable/card_1"
            android:elevation="5dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/restaurant"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eatery"
                android:textSize="30sp"
                android:fontFamily="@font/julee"
                android:padding="30dp"
                android:layout_alignParentRight="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expand_all"
                android:background="#00000000"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:layout_alignParentRight="true"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_margin="20dp"
            android:background="@drawable/card_1"
            android:elevation="5dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/bank"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/banking"
                android:textSize="30sp"
                android:fontFamily="@font/julee"
                android:padding="30dp"
                android:layout_alignParentRight="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expand_all"
                android:background="#00000000"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:layout_alignParentRight="true"/>



        </RelativeLayout>




    </LinearLayout>

</ScrollView>